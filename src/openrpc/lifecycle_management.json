                            }
                        }
                    },
                    "runtime": {
                        "description": "Information about the runtime that the application is running in",
                        "type": "object",
                        "required": [],
                        "properties": {
                            "id": {
                                "description": "The identifier for the runtime",
                                "type": "string"
                            },
