            },
            "examples": [
                {
                    "name": "Default Example",
                    "params": [
                        {
                            "name": "listen",
                            "value": true
                        }
                    ],
                    "result": {
                        "name": "Default Result",
                        "value": {
                          "correlationId": "123",
                          "parameters": {
                            "appId": "SomeAppId"
                          }
                        }
                    }
                }
            ]
        }
    ],
